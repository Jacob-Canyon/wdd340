<% if (title){ %>
    <h1><%= title %></h1>
    <%} else {
        res.redifect('/')
    } %>
    <% if (errors) { %>
        <ul class="notice">
            <% errors.array().forEach(error => { %>
                <li><%= error.msg %></li>
            <%  }) %>
        </ul>
    <%} %>
    <%- messages() %>
<div class="formDiv">
<form id="loginForm" action="/account/login" method="post">
    <label for="account_email">Email</label><br>
    <input type="email" id="email" name="account_email" required><br>
    <label for="account_password">Password</label><br>
    <input type="password" id="password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"><br>
    <input type="submit" value="Login"><br>
    <a href="/account/register">Sign-up</a>
</form>
</div>