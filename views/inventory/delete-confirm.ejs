    <h1><%= title %></h1>
    <%} else {
        res.redifect('/')
    } %>
    <% if (errors) { %>
        <ul class="notice">
            <% errors.array().forEach(error => { %>
                <li><%= error.msg %></li>
            <%  }) %>
        </ul>
    <%} %>
    <%- messages() %>
    <div class="formDiv">
        <form id="deleteForm" action="/inv/delete" method="post">
            <label for="inv_make">Make</label><br>
            <input type="text" id="inv_make" name="inv_make"  readonly value="<%= locals.inv_make %>"><br>
            <label for="inv_make">Model</label><br>
            <input type="text" id="inv_model" name="inv_model"  readonly value="<%= locals.inv_model %>"><br>
            <label for="inv_price">Price</label><br>
            <input type="text" id="inv_price" name="inv_price" required readonly value="<%= locals.inv_price %>"><br>
            <label for="inv_year">Year</label><br>
            <input type="text" id="inv_year" name="inv_year" required readonly value="<%= locals.inv_year %>"><br>
            <input id="submit" type="submit" value="Delete Vehicle">
            <input type="hidden" name="inv_id"<% if(locals.inv_id) { %> value="<%= locals.inv_id %>"<% } %>>
        </form> 

    </div>

    